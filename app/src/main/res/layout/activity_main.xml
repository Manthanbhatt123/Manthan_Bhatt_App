<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".presentation.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Audio Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAudioTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/raise_to_listen"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvAudioStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/speaker_mode"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAudioTitle" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlayAudio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/play_audio"
                        app:layout_constraintEnd_toStartOf="@id/btnStopAudio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAudioStatus" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStopAudio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/stop_audio"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btnPlayAudio"
                        app:layout_constraintTop_toBottomOf="@id/tvAudioStatus" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Night Mode Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNightMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAudio">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvNightModeTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/night_mode_schedule"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNightModeTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="@string/night_mode_schedule"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNightModeTitle" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchNightMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/enable_night_mode"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNightModeTitle2" />

                    <TextView
                        android:id="@+id/tvStartTimeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/start_time"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/btnStartTime"
                        app:layout_constraintEnd_toStartOf="@id/btnStartTime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/switchNightMode" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/_18_00"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/switchNightMode" />

                    <TextView
                        android:id="@+id/tvEndTimeLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/end_time"
                        android:textSize="14sp"
                        app:layout_constraintBaseline_toBaselineOf="@id/btnEndTime"
                        app:layout_constraintEnd_toStartOf="@id/btnEndTime"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnStartTime" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="08:00"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnStartTime" />

                    <TextView
                        android:id="@+id/tvNightModeStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Day Mode"
                        android:textSize="14sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btnEndTime" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edtGifLoopCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:inputType="number"
                android:maxLength="1"
                app:layout_constraintTop_toBottomOf="@id/cardNightMode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnLoopCount"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLoopCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/submitcount"
                app:layout_constraintTop_toBottomOf="@id/cardNightMode"
                app:layout_constraintStart_toEndOf="@+id/edtGifLoopCount"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/bgView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/iVGif"
                app:layout_constraintTop_toTopOf="@id/iVGif"
                app:layout_constraintBottom_toBottomOf="@id/iVGif"
                app:layout_constraintEnd_toEndOf="@id/iVGif"
                android:background="@color/black"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iVGif"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@id/edtGifLoopCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@tools:sample/backgrounds/scenic"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIntent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intent"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@+id/iVGif"
                app:layout_constraintStart_toStartOf="@+id/iVGif"
                app:layout_constraintEnd_toEndOf="@id/iVGif"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWebView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/webview"
                app:layout_constraintTop_toBottomOf="@id/btnIntent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btnCamera"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/camera"
                app:layout_constraintTop_toBottomOf="@+id/btnWebView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/ivMedia"
                app:layout_constraintEnd_toStartOf="@id/btnGallery"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/gallery"
                app:layout_constraintTop_toBottomOf="@+id/btnWebView"
                app:layout_constraintStart_toEndOf="@id/btnCamera"
                app:layout_constraintBottom_toTopOf="@+id/ivMedia"
                app:layout_constraintEnd_toEndOf="parent"/>



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@+id/btnCamera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
